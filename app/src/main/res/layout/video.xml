<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:background="@color/colorPrimary">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/music_back"
        android:scaleType="centerCrop"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/player_control"
            android:orientation="vertical"
            android:background="@color/colorPrimary"
            android:padding="15dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="15dp"
                >
            <ImageButton
                android:layout_width="?attr/actionBarSize"
                android:layout_height="?attr/actionBarSize"
                android:id="@+id/btn_repeat"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:tint="@color/colorwhite"
                app:srcCompat="@drawable/repeat"
                android:onClick="controlClick"
                />
            <SeekBar
                android:id="@+id/seek_song_progressbar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="controlClick"
                />
                <ImageButton
                    android:layout_width="?attr/actionBarSize"
                    android:layout_height="?attr/actionBarSize"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:id="@+id/btn_suffle"
                    android:tint="@color/colorwhite"
                    app:srcCompat="@drawable/ic_suffle"
                    android:onClick="controlClick"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="16dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_song_current_duration"
                    android:layout_marginLeft="10dp"
                    android:text="0:00"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:textColor="@color/colorYellow"
                    />
                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_weight="1"
                    android:id="@+id/btn_prev"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:tint="@color/colorDarkOrange"
                    app:srcCompat="@drawable/ic_skip_previous"
                    android:onClick="controlClick"
                    />
                <android.support.design.widget.FloatingActionButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_play"
                    android:layout_margin="5dp"
                    android:clickable="true"
                    android:tint="@color/colorwhite"
                    android:backgroundTint="@color/colorDarkOrange"
                    app:elevation="2dp"
                    app:fabSize="normal"
                    app:rippleColor="@color/colorwhite"
                    app:srcCompat="@drawable/ic_play_arrow"
                    />
                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_weight="1"
                    android:id="@+id/btn_next"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:tint="@color/colorDarkOrange"
                    app:srcCompat="@drawable/ic_skip_next"
                    android:onClick="controlClick"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/total_duration"
                    android:layout_marginLeft="10dp"
                    android:text="0:00"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:textColor="@color/colorYellow"
                    />
            </LinearLayout>
            </LinearLayout>
    </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar"
            android:layout_centerHorizontal="true"
            android:id="@+id/play_disk"
            android:gravity="center"
            android:orientation="vertical"
            >
            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/image"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@mipmap/disk"
                app:civ_shadow="true"
                app:civ_shadow_radius="0"
                />
        </LinearLayout>

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/toolbar"
        android:background="@android:color/transparent"
        android:theme="@style/Theme.AppCompat.NoActionBar"
        app:contentInsetStartWithNavigation="0dp"
        app:popupTheme="@style/Theme.AppCompat.Light"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Now Playing"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorYellow"
                android:textStyle="bold"
                />
        </LinearLayout>
    </android.support.v7.widget.Toolbar>
</RelativeLayout>